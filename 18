// C++ code
//

int num;
int pin=12;
String msg = "num of times LED blink: ";
String msg2="";
int dt=500;

void setup()
{
  Serial.begin(9600);
  pinMode(pin,OUTPUT);
}

void loop()
{
  Serial.println(msg);
  
  while(Serial.available()==0){//CHECK AS LONG AS INPUT IS NOT ENTERED
    
  }
  
  num=Serial.parseInt();//OR PARSEFLOAT,ETC
  
  for(int i=1;i<=num;i++)
  {
    digitalWrite(pin,HIGH);
    delay(dt);
    digitalWrite(pin,LOW);
    delay(dt);
  }
  
}
