#include <Servo.h>

int servoPin = 9;
int servoPos = 180;
Servo myServo;

void setup() {
  Serial.begin(9600);
  myServo.attach(servoPin);
}

void loop() {
  Serial.println("What Angle for the Servo? ");

  while (Serial.available() == 0) {
  }

  servoPos = Serial.parseInt();
  myServo.write(servoPos);
}
